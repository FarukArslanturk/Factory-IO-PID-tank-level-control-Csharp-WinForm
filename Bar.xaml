<UserControl x:Class="PID_tanklevelcontrol.Bar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PID_tanklevelcontrol"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="20" Background="Black" BorderThickness="1">
    <UserControl.BorderBrush>
        <SolidColorBrush Color="Black"/>

    </UserControl.BorderBrush>
    <Border x:Name="LevelMeterDisp" VerticalAlignment="Bottom" Width="60" Height="0">
        <Border.Background>
            <LinearGradientBrush x:Name="LinearProcessBrush" StartPoint="0,0" EndPoint="1.5,0" SpreadMethod="Reflect">
                <GradientStop Color="Blue" Offset="0"/>
                <GradientStop Color="White" Offset="1.5"/>
                
            </LinearGradientBrush>
        </Border.Background>
    </Border>
</UserControl>
